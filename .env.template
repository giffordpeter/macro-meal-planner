# Environment
NODE_ENV=development
APP_ENV=development
APP_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/macro_meal_planner_dev
DATABASE_CONNECTION_LIMIT=10
DATABASE_SSL_ENABLED=false

# Authentication
NEXTAUTH_SECRET=your-secret-here
NEXTAUTH_URL=http://localhost:3000
AUTH_GITHUB_ID=your-github-id
AUTH_GITHUB_SECRET=your-github-secret

# Azure Services
AZURE_OPENAI_KEY=your-openai-key
AZURE_OPENAI_ENDPOINT=your-openai-endpoint
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection
AZURE_KEYVAULT_URL=your-keyvault-url

# Monitoring
APPLICATION_INSIGHTS_CONNECTION_STRING=your-insights-connection
LOG_LEVEL=debug

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_PREMIUM_FEATURES=true

# Cache Settings
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Performance Settings
EDGE_CONFIG=development
CDN_ENABLED=false
